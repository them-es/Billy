{
	"private": true,
	"name": "billy",
	"version": "2.0.0",
	"homepage": "https://them.es",
	"author": "them.es",
	"description": "Billy billing suite for WordPress",
	"license": "GPLv2+",
	"scripts": {
		"create-languagefile": "wp i18n make-pot . languages/billy.pot --exclude=pdfjs,tmp,assets,blocks/node_modules,mpdf,node_modules,vendor --headers='{\"Report-Msgid-Bugs-To\":\"https://github.com/them-es/billy/issues\"}'",
		"watch": "webpack serve && wp-scripts start",
		"build-blocks": "cd ./blocks/ && npm run build",
		"build": "wp-scripts build",
		"build-all": "wp-scripts build && npm run build-blocks",
		"dist": "composer update"
	},
	"devDependencies": {
		"bootstrap": "^4",
		"path": "^0.12.7",
		"webpack": "^4",
		"webpack-remove-empty-scripts": "^1.1.1",
		"@wordpress/scripts": "^30.23.0"
	}
}
